<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextIP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Adresse IP"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/editTextNumberPort2"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumberPort2"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextNumberPort2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewPort2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port du serveur"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberPort2"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumberPort2"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberPort2" />

    <Button
        android:id="@+id/buttonRetour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewIP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse IP du serveur"
        app:layout_constraintBottom_toTopOf="@+id/editTextIP2"
        app:layout_constraintEnd_toEndOf="@+id/editTextIP2"
        app:layout_constraintStart_toStartOf="@+id/editTextIP2" />

    <TextView
        android:id="@+id/textViewtitre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ParamÃ¨tres du serveur"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262" />

    <EditText
        android:id="@+id/editTextNumberPort2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="124dp"
        android:ems="10"
        android:hint="Port"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewtitre2" />

    <Button
        android:id="@+id/buttonSauvegarder"
        android:layout_width="147dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:text="Sauvegarder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextIP2" />
</androidx.constraintlayout.widget.ConstraintLayout>